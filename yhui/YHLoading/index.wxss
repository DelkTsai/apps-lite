.yh-spinner {
  position: fixed;
  width: 64px;
  height:64px;
  background: rgba(0, 0, 0, 0.8);
  padding: 10px;
  border-radius: 10px;
  top:50%;
  left:50%;
  transform: translate3d(-50%,-50%,0);
  z-index: 999;
}

@keyframes fade {
  from {opacity: 1;}
  to {opacity: 0.25;}
}

.yh-spinner-item {
    width: 3%;
    height: 16%;
    background: #FFF;
    position: absolute;
    left: 49%;
    top: 43%;
    opacity: 0;
    border-radius: 50px;
    box-shadow: 0 0 3px rgba(0,0,0,0.2);
    animation: fade 1s linear infinite;
  }

  .yh-spinner-item:nth-child(1) {
    transform:rotate(0deg) translate(0, -130%);
    animation-delay: 0s;
  }

  .yh-spinner-item:nth-child(2) {
    transform:rotate(30deg) translate(0, -130%); 
    animation-delay: -0.9167s;
  }

  .yh-spinner-item:nth-child(3) {
    transform:rotate(60deg) translate(0, -130%); 
    animation-delay: -0.833s;
  }
  .yh-spinner-item:nth-child(4) {
    transform:rotate(90deg) translate(0, -130%); 
    animation-delay: -0.7497s;
  }
  .yh-spinner-item:nth-child(5) {
    transform:rotate(120deg) translate(0, -130%); 
    animation-delay: -0.667s;
  }
  .yh-spinner-item:nth-child(6) {
    transform:rotate(150deg) translate(0, -130%); 
    animation-delay: -0.5837s;
  }
  .yh-spinner-item:nth-child(7) {
    transform:rotate(180deg) translate(0, -130%); 
    animation-delay: -0.5s;
  }
  .yh-spinner-item:nth-child(8) {
   transform:rotate(210deg) translate(0, -130%); 
   animation-delay: -0.4167s;
  } 
  .yh-spinner-item:nth-child(9) {
